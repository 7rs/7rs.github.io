root = true

[*]
charset = utf-8
max_line_length = 120
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[{*.md,*.mdx,*.yml,*.js,*.mjs,*.ts,*.astro,*.svelte}]
indent_size = 2
trim_trailing_whitespace = false

[{.prettierrc,*.json}]
indent_size = 4

[{*.styl,*.stylus}]
indent_size = 2
