{
    "formatter": {
        "indentStyle": "space",
        "lineWidth": 120
    },
    "linter": {
        "enabled": true
    },
    "files": {
        "ignore": ["*.svelte", "**/node_modules/**", "**/dist/**"]
    },
    "javascript": {
        "globals": ["Astro"]
    },
    "overrides": [
        {
            "include": [".prettierrc", "*.json"],
            "formatter": {
                "indentWidth": 4
            }
        },
        {
            "include": ["*.jsonc", "*.json"],
            "json": {
                "parser": {
                    "allowComments": true
                }
            }
        },
        {
            "include": [
                "*.ts",
                "*.*.ts",
                "**/*.ts",
                "*.js",
                "**/*.js",
                "*.*.js",
                "*.mjs",
                "*.*.mjs",
                "postcss.config.mjs",
                "**/*.mjs",
                "*.astro",
                "**/*.astro"
            ],
            "javascript": {
                "formatter": {
                    "quoteStyle": "single",
                    "jsxQuoteStyle": "single"
                }
            }
        }
    ]
}
